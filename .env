# Application Settings
APP_NAME=NCERT Doubt Solver
DEBUG=True

# Windows Paths (use forward slashes or double backslashes)
NCERT_PDF_PATH=backend/data/ncert_pdfs
PROCESSED_DATA_PATH=backend/data/processed
VECTOR_DB_PATH=backend/vector_db
MODEL_PATH=backend/models

# Tesseract and Poppler (adjust version as needed)
TESSERACT_CMD=C:/Program Files/Tesseract-OCR/tesseract.exe
POPPLER_PATH=C:/Program Files/poppler-25.07.0/Library/bin

# Vector Database
VECTOR_DB_TYPE=chromadb
COLLECTION_NAME=ncert_documents

# Models (using smaller model for Windows)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
LLM_MODEL=google/flan-t5-base

# OCR Languages
OCR_LANGUAGE=eng+hin+urd

# Performance Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5
MAX_TOKENS=512
LLM_TEMPERATURE=0.3

GROQ_API_KEY=add_your_api_key
USE_GROQ=True

GROQ_MODEL=llama-3.1-70b-versatile
